{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "command": "bundle",
      "args": [
        "exec",
        "jekyll",
        "b"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
    },
    {
      "label": "Watch",
      "command": "bundle",
      "args": [
        "exec",
        "jekyll",
        "s",
        "--force_polling",
        "--livereload",
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
